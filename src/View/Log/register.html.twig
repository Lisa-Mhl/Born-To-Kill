{% extends 'layout.html.twig' %}
{% block title %}Register{% endblock %}
{% block content %}
    <form method="post">
        <fieldset class="fieldset_r">

            <label for="input_pseudo_r" class="label_r">Pseudo</label>
            <input type="text" id="input_pseudo_r" name="pseudo" class="input_r">

            <label for="input_email" class="label_r">Email</label>
            <input type="email" id="input_email" name="email" class="input_r">

            <label for="input_password_r" class="label_r">Password</label>
            <input type="password" id="input_password_r" name="password" class="input_r">

            <label for="select_role" class="label_r">Choose a role:</label>
            <select name="role_id" id="select_role">
                {% for user in users %}
                    <option value="{{ user.id }}">{{ user.id }}</option>
                {% endfor %}
            </select>

            <div class="button_r">
                <button type="submit" id="button_r">S'incrire</button>
            </div>

            {% if error.form %}
                {{error.form}}
            {% endif %}
        </fieldset>
    </form>
{% endblock %}