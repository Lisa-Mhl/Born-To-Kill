{% extends 'layout.html.twig' %}
{% block title %}Register{% endblock %}
{% block content %}
    <div class="bg-r">
        <form method="post" class="form-log-r">
            <fieldset class="fieldset_r">

                <label for="input_pseudo_r" class="label_r">Pseudo</label>
                <input type="text" id="input_pseudo_r" name="pseudo" class="input_r">

                <label for="input_email" class="label_r">E-mail</label>
                <input type="email" id="input_email" name="email" class="input_r">

                <label for="input_password1_r" class="label_r">Mot de passe</label>
                <input type="password" id="input_password1_r" name="password" class="input_r">

                <label for="input_password2_r" class="label_r">Confirme ton mot de passe</label>
                <input type="password" id="input_password2_r" name="confirmPassword" class="input_r">

                <input name="role" type="hidden" value="1">

                <div class="button_r">
                    <button type="submit" id="button_r">S'incrire</button>
                </div>

                <div class="error">
                    {% if error.form %}
                        {{error.form}}
                    {% elseif error.pseudo %}
                        {{ error.pseudo}}
                    {% elseif error.password %}
                        {{ error.password }}
                    {% endif %}
                </div>

            </fieldset>
        </form>
    </div>
{% endblock %}