{% extends 'layout.html.twig' %}
{% block content %}

    <body class="target">

    {% if admin == true %}
        <h1 class="cibles"><a href="/Admin/index">ðŸ˜ˆ</a></h1>
    {% endif %}

    <form method="POST">
        <label for="target-select">Trier par:</label>
        <select name="target" id="target-select">
            <option value="option">--Choisissez une option--</option>
            <option value="name">Nom</option>
            <option value="bounty">Prime</option>
            <option value="dead">Mort</option>
            <option value="alive">Vivant</option>
            <option value="date">Date de mort</option>
        </select>
        <button type="submit">Filtrer</button>
    </form>

    <div class="row">
        <div class="col-8">
            <div class="container-inside">
                <div class="row">
                    {% for item in targets %}
                        <div class="col-4">
                            <div class="card" id="plop">
                                <img src="{{ item.img }}" alt=""/>
                                <div class="card-body">
                                    <h3 class="card-title red bold">{{ item.name }}
                                        <form method="POST">
                                            <input type="hidden" name="id" value="{{ item.id }}">
                                            <button class="like" type="submit" name="like">LIKE
                                            </button> {{ item.score }}
                                        </form>
                                    </h3>
                                    <p class="card-text">
                                        {{ item.bio }}</p>
                                    <p class="card-text">
                                        <span class="red bold">Statut:</span> {{ item.status_name }}</br>
                                        <span class="red bold"> Prime:</span>{{ item.bounty }} â‚¬ </br>
                                        {% if item.status_id == 1 %}
                                            <span class="red bold"> Date du crime:</span>{{ item.date_kill }} </br>
                                            <span class="red bold">Arme du crime:</span>{{ item.weapon_name }}</br>
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="col-4 ">
            <div class="bg-list">
                <ul class="list-group list-group-flush left">
                    <h4 class="dead">Death List</h4>
                    {% for item in alive %}
                        <li class="list-group-item">{{ item.name }}</li>
                    {% endfor %}
                </ul>

                <ul class="list-group list-group-flush right">
                    {% for item in dead %}
                        <li class="list-group-item">{{ item.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

    </div>
    </div>
    </body>
{% endblock %}
