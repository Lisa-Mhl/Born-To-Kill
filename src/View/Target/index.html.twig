{% extends 'layout.html.twig' %}
{% block content %}

    <body class="target">

    {% if admin == true %}
        <h1 class="cibles"><a href="/Admin/index">ðŸ˜ˆ</a></h1>
    {% endif %}


    <div class="row">
        <div class="col-8">
            <div class="container-inside">
                <div class="row">
                    {% for item in targets %}
                        <div class="col">
                            <div class="card" style="width: 18rem;">
                                <img src="{{ item.img }}" alt=""/>
                                <div class="card-body">
                                    <h3 class="card-title red bold">{{ item.name }}</h3>
                                    <p class="card-text">
                                        {{ item.bio }}</p>
                                    <p class="card-text">
                                        <span class="red bold">Statut:</span> {{ item.status_name }}</br>
                                        <span class="red bold"> Prime:</span>{{ item.bounty }} </br>
                                        {% if item.status_id == 1 %}
                                        <span class="red bold"> Date du crime:</span>{{ item.date_kill }} </br>
                                        <span class="red bold">Arme du crime:</span>{{ item.weapon_name }}</br>
                                        {% endif %}
                                    </p>

                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>


        <div class="col-4">

            <ul class="list-group list-group-flush left">
                <h4 class="dead">Deathlist</h4>
                {% for item in alive %}
                    <li class="list-group-item">{{ item.name }}</li>
                {% endfor %}
            </ul>

            <ul class="list-group list-group-flush right">
                {% for item in dead %}
                    <li class="list-group-item">{{ item.name }}</li>
                {% endfor %}
            </ul>

        </div>

    </div>
    </div>
    </body>
{% endblock %}
